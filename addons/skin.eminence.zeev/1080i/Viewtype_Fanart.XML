<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- FANART -->
    <include name="Viewtype_Fanart">
        <control type="group">
            <visible>Control.IsVisible(520)</visible>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <left>side</left>
            <right>side</right>
            <top>top</top>
            <height>height</height>
       <!--     <include name="Object_Line">
                <param name="width" value="1880" />
                <param name="label" value="$INFO[Control.GetLabel(3),, ]$INFO[Control.GetLabel(4),[COLOR=PosterBorder]-[/COLOR] , ]" />
            </include>-->
            <include name="View_Fanart">
                <param name="id" value="520" />
                <param name="condition" value="Window.IsVisible(MyPics.xml) | Container.Content(episodes) | Container.Content(tvshows) | Container.Content(movies)" />
            </include>
            <include>Object_Arrows_Vertical</include>
        </control>
    </include>
    <include name="View_Fanart">
        <control type="group">
            <control type="panel" id="$PARAM[id]">
                <width>1890</width>
                <height>700</height>
                <onup>$PARAM[id]</onup>
                <ondown>$PARAM[id]</ondown>
                <onright condition="!Skin.HasSetting(KioskMode)">9000</onright>
                <onleft condition="!StringCompare(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</onleft>
                <pagecontrol>60</pagecontrol>
                <preloaditems>2</preloaditems>
                <orientation>vertical</orientation>
                <viewtype label="20445">fanart</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout height="350" width="630">
                    <control type="group">
                        <left>0</left>
                        <right>pad</right>
                        <bottom>pad</bottom>
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture colordiffuse="PosterBorder">common/white.png</texture>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Thumb]</texture>
                        </control>
                        <control type="image">
                            <right>15</right>
                            <top>15</top>
                            <height>32</height>
                            <width>32</width>
                            <texture>$VAR[Image_Indicator]</texture>
                            <visible>!IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <texture flipy="true" colordiffuse="9f000000">common/white.png</texture>
                        </control>
                        <control type="label">
                            <left>25</left>
                            <right>25</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <textcolor>HomeSubLabel</textcolor>
                            <font>Font-ListInfo-Small-Bold</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>25</left>
                            <right>25</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <align>right</align>
                            <font>Font-ListInfo-Small</font>
                            <textcolor>HomeSubLabel</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </control>
                </itemlayout>

                <focusedlayout height="350" width="630">
                    <control type="group">
                        <left>0</left>
                        <right>pad</right>
                        <bottom>pad</bottom>
                        <control type="image">
                            <width>100%</width>
                            <height>100%</height>
                            <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Thumb]</texture>
                        </control>
                        <control type="image">
                            <right>15</right>
                            <top>15</top>
                            <height>32</height>
                            <width>32</width>
                            <texture>$VAR[Image_Indicator]</texture>
                            <visible>!IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <control type="image">
                            <left>pad</left>
                            <right>pad</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <texture flipy="true" colordiffuse="9f000000">common/white.png</texture>
                        </control>
                        <control type="label">
                            <left>25</left>
                            <right>25</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <font>Font-ListInfo-Small-Bold</font>
                            <textcolor>HomeSubLabel</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>25</left>
                            <right>25</right>
                            <bottom>pad</bottom>
                            <height>48</height>
                            <align>right</align>
                            <font>Font-ListInfo-Small</font>
                            <textcolor>HomeSubLabel</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>
</includes>
